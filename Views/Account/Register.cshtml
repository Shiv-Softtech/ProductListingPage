@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/assets/js-lib/angular.min.js"></script>
    <script src="~/assets/js-lib/angular-cookies.js"></script>
    <script src="~/assets/js/app/app.js"></script>
    <script src="~/assets/js/app/Controller/AccountCtr.js"></script>
    <title>Registration_form</title>
</head>

<body>
    <!-- main section -->
    <main class="container" ng-app="myApp" ng-controller="registerController">
        <!-- Registration form section start -->
        <div class="row my-5">
            <h1 class="text-center text-primary">Registration Form</h1>
            <!-- {{user}} -->
            <div class="col-lg-8 m-auto d-block bg-info shadow-lg p-3 mb-5 rounded-2 w-50">
                <form name="myForm" novalidate ng-submit="validation()">
                    <div class="form-group py-3">
                        <label>Username:</label>
                        <input type="text" name="name" id="username" class="form-control" placeholder="Enter your name" ng-model="user.name" ng-pattern="/^[a-z A-Z]+$/" ng-minlength="3" ng-required="true">
                        <span ng-show="myForm.$submitted ||myForm.name.$dirty ||myForm.name.$touched">
                            <span id="err" class="text-danger" ng-show="myForm.name.$error.required">**Please fill name</span>
                            <span id="err" class="text-danger" ng-show="myForm.name.$error.pattern">*Only characters </span>
                            <span id="err" class="text-danger" ng-show="myForm.name.$error.minlength">*min 3 characters required </span>
                        </span>
                    </div>
                    <div class="form-group py-3">
                        <label>Email:</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" ng-model="user.email" ng-required="true">
                        <span ng-show="myForm.$submitted ||myForm.email.$dirty ||myForm.email.$touched">
                            <span id="err" class="text-danger" ng-show="myForm.email.$error.required">*Please fill email</span>
                            <span id="err" class="text-danger" ng-show="myForm.email.$error.email">*Invalid email</span>
                        </span>
                    </div>
                    <div class="form-group py-3">
                        <label>MobileNumber:</label>
                        <input type="text" name="mobilenumber" id="mobilenumber" class="form-control" maxlength="10" ng-minlength="10" placeholder="Enter 10 digit mobile number" ng-model="user.mobilenumber" ng-required="true">
                        <span ng-show="myForm.$submitted ||myForm.mobilenumber.$dirty ||myForm.mobilenumber.$touched">
                            <span id="err" class="text-danger" ng-show="myForm.mobilenumber.$error.required">*Please fill mobile numder</span>
                            <span id="err" class="text-danger" ng-show="myForm.mobilenumber.$error.minlength">*Only 10 digits mobile number</span>
                            <span id="err" class="text-danger" ng-show="myForm.mobilenumber.$error.maxlength">*Only 10 digits mobile number</span>
                        </span>
                    </div>
                    <div class="gender form-group py-3">
                        <label class="me-2"> Gender:</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="male" value="male" ng-model="user.gender" ng-required="true">
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="female" value="female" ng-model="user.gender" ng-required="true" >
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                        <span ng-show="myForm.$submitted ||myForm.gender.$dirty ||myForm.gender.$touched">
                            <span id="err" class="text-danger" ng-show="myForm.gender.$error.required">*Please select gender</span>
                        </span>
                    </div>
                    <div class="form-group py-3">
                        <label class="me-2">Hobbies:</label>
                        <div class="form-check form-check-inline" ng-repeat="hobby in hobbylist">
                            <input class="form-check-input" type="checkbox" name="hobbies" ng-model="hobby.isSelected" ng-change="checkhobby()">
                            <label class="form-check-label" ng-bind="hobby.hobbyname"></label>
                        </div>
                        <span>
                            <span class="d-block text-danger" ng-bind="hobbyerr"></span>
                        </span>
                    </div>
                    <div class="form-group py-3">
                        <div class="dropdown">
                            <label name="Department">Deparment:</label>
                            <select id="inputDepartment" class="form-select" name="department" ng-model="user.department" ng-required="true">
                                <option value="" selected>Choose your department</option>
                                <option value="developer" name="Department" ng-model="department" ng-required="true">developer</option>
                                <option value="Hr" name="Department" ng-model="department" ng-required="true">Hr</option>
                                <option value="Sales" name="Department" ng-model="department" ng-required="true">Sales</option>
                                <option value="Account" name="Department" ng-model="department" ng-required="true">Account</option>
                            </select>
                            <span ng-show="myForm.$submitted ||myForm.department.$dirty ||myForm.department.$touched">
                                <span id="err" class="text-danger error" ng-show="myForm.department.$error.required">*Please select department</span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group py-3">
                        <label>Password:</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" ng-minlength="6" ng-model="user.password" ng-required="true">
                        <span ng-show="myForm.$submitted ||myForm.password.$dirty ||myForm.password.$touched">
                            <span id="err" class="text-danger" ng-show="myForm.password.$error.required">*Please fill password</span>
                            <span id="err" class="text-danger" ng-show="myForm.password.$error.minlength">*atleast 6 digits</span>
                        </span>
                    </div>
                    <div class="form-group py-3">
                        <label>Confirm Password:</label>
                        <input type="password" name="confirmpass" id="confirmpassword" class="form-control" placeholder="Confirm password" ng-model="user.confirmpassword" ng-required="true">
                        <!-- <span id="err" class="text-danger" ng-show="myForm.confirmpass.$invalid && myForm.confirmpass.$touched">*Please fill confirmpassword atleast 6 characters</span> -->
                        <span ng-show="myForm.$submitted ||myForm.confirmpass.$dirty ||myForm.confirmpass.$touched">
                            <span id="err" class="text-danger" ng-show="myForm.confirmpass.$error.required">*Please fill confirm password</span>
                            <span id="err" class="text-danger" ng-show="!myForm.confirmpass.$error.required && user.password != user.confirmpassword">*Password did not match</span>
                            @*<span id="err" class="text-danger" ng-bind="err"></span>*@
                        </span>
                        <!-- <span id="err" class="text-success" ng-bind="errchecked"></span> -->
                    </div>
                    <button type="submit" id="submitbtn" class="btn btn-primary my-2">Register</button>
                    <div><a href="/Account/Login" class="">Click to login</a></div>
                </form>
            </div>
        </div>
        <!-- Registration form section end -->
    </main>


</body>

</html>